{
  "name": "workspace",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "targets": {
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "syncVersions": true,
        "preset": "angular",
        "push": true,
        "baseBranch": "master",
        "postTargets": ["workspace:github"]
      },
      "configurations": {
        "alpha": {
          "baseBranch": "alpha",
          "releaseAs": "prerelease",
          "preid": "alpha"
        },
        "beta": {
          "baseBranch": "beta",
          "releaseAs": "prerelease",
          "preid": "beta"
        }
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    }
  }
}
